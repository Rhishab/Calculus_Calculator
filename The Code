#include<iostream>

#include<string>

using namespace std;

class Stack {
private:
    int top;

    int arr[6];

public:
    Stack() {
        top = -1;
        for (int i = 0; i < 6; i++) {
            arr[i] = 0;
        }
    }

    bool isEmpty() {
        if (top == -1)
            return true;
        else
            return false;
    }
    bool isFull() {
        if (top == 5)
            return true;
        else
            return false;
    }

    void push(int val) {
        if (isFull()) {
            cout << "stack overflow" << endl;
        }
        else {
            top++; // 1
            arr[top] = val;
        }
    }

    int pop() {
        if (isEmpty()) {
            cout << "stack underflow" << endl;
            return 0;
        }
        else {
            int popValue = arr[top];
            arr[top] = 0;
            top--;
            return popValue;
        }
    }



    void display() {
        cout << "All values in the Stack are " << endl;
        for (int i = 5; i >= 0; i--) {
            cout << arr[i] << endl;
        }
    }
};

